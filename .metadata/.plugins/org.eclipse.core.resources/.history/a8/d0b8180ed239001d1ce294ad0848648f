#include <common_macros.h>
#include <keypad.h>
#include <lcd.h>
#include <micro_config.h>
#include <std_types.h>
#include <util/delay.h>

int main(void){
	LCD_init();
	LCD_sendCommand(0x01);
	while (1){
		LCD_displayString( LCD_intgerToString(KeyPad_getPressedKey()));
		_delay_ms(100);
	}
}
